pip install .

# Install Other packages

# Install R pkg
R --slave -e "install.packages(c('rlang',
                                     'tidyverse',
                                     'BiocManager', 
                                     'RcppEigen',
                                     # For kinship analysis
                                     'igraph',
                                     # leafcutter post-processing    
                                     'foreach'))"
                                     
